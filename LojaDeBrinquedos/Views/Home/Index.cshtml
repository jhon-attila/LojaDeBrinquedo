@model IEnumerable<LojaDeBrinquedos.Models.Produto>

@{
    ViewData["Title"] = "Página Inicial";
}
<body>


    <div class="text-center">
        <h1 class="display-4" style="color: black; font-weight: bold;">Nossos Produtos</h1>
    </div>

    <div class="row"">
        @foreach (var produto in Model)
        {
            <div class="col-md-4 mb-4" >
                <div class="card h-100 mx-4" style="background-color: #4EDAF9; border: 2px solid black;">
                    <img src="@produto.ImageUrl" class="card-img-top" alt="@produto.Nome" style="object-fit: cover; ">
                    <div class="card-body">
                        <h5 class="card-title">@produto.Nome</h5>
                        <p class="card-text">@produto.Descricao</p>
                        <p class="card-text"><strong>Preço: R$ @produto.Preco.ToString("F2")</strong></p>
                        <p class="card-text"><small class="text-muted">Estoque: @produto.Estoque</small></p>

                        <form asp-controller="Carrinho" asp-action="AdicionarCarrinho" method="post">
                            <input type="hidden" name="produtoId" value="@produto.Id" />
                            <div class="form-group mb-2">
                                <label for="quantidade-@produto.Id"">Quantidade:</label>
                                <input type="number" id="quantidade-@produto.Id" name="quantidade" class="form-control" value="1" min="1" max="@produto.Estoque" 
                                style="border: 2px solid black; border-radius: 15px; padding: 10px; background-color: white;" />
                            </div>
                            <div class="text-center">
                              <button type="submit" class="btn btn-primary" 
                              style="border: 2px solid black; border-radius: 15px; padding: 3%; background-color: white; color: black;">
                              Adicionar ao Carrinho </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>




</body>